#include <Wire.h>
#include <LiquidCrystal_I2C.h>
#include <arduinoFFT.h>

#define SAMPLES 128  // Tama침o de la muestra para la FFT
#define SAMPLING_FREQUENCY 10000  // Frecuencia de muestreo (Hz)

#define I2C_ADDR 0x27  // Direcci칩n I2C de la pantalla LCD

arduinoFFT FFT = arduinoFFT();
LiquidCrystal_I2C lcd(I2C_ADDR, 16, 2);

double vReal[SAMPLES];
double vImag[SAMPLES];

void setup() {
  Wire.begin();
  lcd.init();
  lcd.backlight();

  // Inicializa el pin de entrada de audio
  pinMode(A0, INPUT);
}

void loop() {
  for (int i = 0; i < SAMPLES; i++) {
    vReal[i] = analogRead(A0);  // Captura la se침al de audio
    vImag[i] = 0;
    delayMicroseconds(1000000 / SAMPLING_FREQUENCY); // Espera entre muestras
  }

  FFT.Windowing(vReal, SAMPLES, FFT_WIN_TYP_HAMMING, FFT_FORWARD);
  FFT.Compute(vReal, vImag, SAMPLES, FFT_FORWARD);
  FFT.ComplexToMagnitude(vReal, vImag, SAMPLES);

  lcd.clear();
  for (int i = 1; i < SAMPLES / 2; i++) {
    int magnitude = (int)vReal[i];
    int barSize = map(magnitude, 0, 1023, 0, 16);
    
    lcd.setCursor(i - 1, 0);
    for (int j = 0; j < barSize; j++) {
      lcd.write(255); // Car치cter personalizado para representar el espectro
    }
  }
  delay(1000); // Pausa entre muestras
}
